<%- include('../../layouts/header'); -%>
<link rel="stylesheet" href="../../card.css">
<div class="container">
    <div class="row">
        <% books.forEach(book => { %>
            <div class="col-auto-lg">
                <div class="card">
                    <div class="card-img">
                        <img class="" src="<%= book.image %> " alt="book">
                    </div>
                    <div class="card-body">
                        <h4 class="card-title"><%= book.title %> </h4>
                        <p class=""><%= book.description.substring(0,50) %>...</p>
                        <a class="btn aqua-gradient btn-sm" href="/library/<%= book._id %> ">More...</a>
                    </div>
                </div>
            </div>
        <% }) %>
        
    </div>

</div>






<%- include('../../layouts/footer'); -%>